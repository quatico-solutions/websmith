        "rimraf": "^4.1.2",
        "thread-loader": "3.0.4",
        "ts-jest": "^29.0.5",
        "typescript": "~4.9.5",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "@quatico/websmith-core": "0.3.4",
        "webpack": "^5.75.0"
    },
    "engines": {
        "node": ">=16.x",
        "yarn": ">=1.20.x"
    }
