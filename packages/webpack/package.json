{
    "name": "@quatico/websmith-webpack",
    "description": "Webpack loader for @quatico/websmith-compiler",
    "version": "0.4.1",
    "author": "Quatico Solutions AG",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/quatico-solutions/websmith.git"
    },
    "bugs": {
        "url": "https://github.com/quatico-solutions/websmith/issues"
    },
    "homepage": "https://github.com/quatico-solutions/websmith#readme",
    "files": [
        "LICENSE",
        "README.md",
        "lib"
    ],
    "scripts": {
        "clean": "rimraf lib coverage test/__data__/**/.build/",
        "lint": "eslint \"{src,test}/**/*.{js,ts,tsx}\" --fix --color",
        "build": "tsc",
        "watch": "tsc --watch",
        "watch:test": "jest --watch",
        "test": "jest --coverage",
        "test:e2e": "jest -c jest.e2e.config.js --runInBand",
        "dist": "yarn clean && yarn lint && yarn test && cross-env-shell NODE_ENV=production \"yarn build\" && yarn test:e2e",
        "publish-npm": "npm publish --access public"
    },
    "dependencies": {
        "@quatico/websmith-api": "^0.4.1",
        "@quatico/websmith-core": "^0.4.1"
    },
    "devDependencies": {
        "@swc/core": "1.3.76",
        "@swc/jest": "0.2.28",
        "@types/jest": "^29.2.2",
        "@types/node": "16",
        "@types/react": " 18.2.20",
        "@types/react-dom": "18.2.7",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "@typescript-eslint/parser": "^6.3.0",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^27.1.4",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-testing-library": "^5.3.1",
        "fork-ts-checker-webpack-plugin": "^8.0.0",
        "jest": "^29.3.1",
        "prettier": "^3.0.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "rimraf": "^5.0.0",
        "thread-loader": "4.0.2",
        "ts-jest": "^29.0.3",
        "typescript": "5.1.6",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.2"
    },
    "peerDependencies": {
        "webpack": "5.x"
    },
    "engines": {
        "node": ">=16.x",
        "yarn": ">=1.20.x"
    }
}
