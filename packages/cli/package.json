{
    "name": "@websmith/cli",
    "version": "0.0.2",
    "description": "A CLI for the websmith compiler",
    "author": "Quatico Solutions AG",
    "license": "SEE LICENSE IN LICENSE",
    "publishConfig": {
        "registry": "https://binaries.quatico.com/artifactory/api/npm/quatico-private-npm/"
    },
    "main": "./bin/index.js",
    "types": "./bin/index.d.ts",
    "bin": {
        "websmith": "./bin/bin.js"
    },
    "files": [
        "LICENSE",
        "README.md",
        "bin"
    ],
    "scripts": {
        "clean": "rimraf lib bin coverage",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix --color",
        "build": "tsc",
        "watch": "tsc --watch",
        "test": "jest --color --verbose --coverage",
        "test:update-snapshots": "yarn test -u",
        "test:watch": "jest --color --watch",
        "dist": "cross-env-shell NODE_ENV=production \"yarn clean && yarn lint && yarn test && yarn build\"",
        "prepublishOnly": "yarn dist",
        "publish-npm": "npm publish --access public"
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/minimist": "^1.2.2",
        "@types/node": "16",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "concurrently": "7.1.0",
        "cross-env": "7.0.3",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^26.1.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-testing-library": "^5.2.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "minimist": "^1.2.6",
        "prettier": "^2.6.2",
        "rimraf": "3.0.2",
        "ts-jest": "27.1.4"
    },
    "dependencies": {
        "@websmith/addon-api": "^0.0.2",
        "@websmith/compiler": "^0.0.2",
        "commander": "^9.1.0",
        "ts-node": "10.7.0",
        "typescript": "4.5.4"
    },
    "engines": {
        "node": ">=16.x",
        "yarn": ">=1.20.x"
    }
}
