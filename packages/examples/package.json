{
    "name": "@quatico/websmith-examples",
    "version": "0.4.0",
    "description": "A library of example addons for the websmith compiler",
    "author": "Quatico Solutions AG",
    "license": "MIT",
    "private": true,
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "files": [
        "LICENSE",
        "README.md",
        "lib"
    ],
    "scripts": {
        "clean": "rimraf lib dist bin coverage",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix --color",
        "build": "tsc",
        "execute": "websmith --addons example-generator,example-processor,example-transformer,example-result-processor -p tsconfig.execute.json",
        "watch": "tsc --watch",
        "watch:test": "jest --watch",
        "test": "jest --coverage --passWithNoTests",
        "test:update-snapshots": "yarn test -u",
        "dist": "cross-env-shell NODE_ENV=production \"yarn clean && yarn lint && yarn test && yarn build\""
    },
    "devDependencies": {
        "@quatico/websmith-api": "^0.4.0",
        "@quatico/websmith-core": "^0.4.0",
        "@swc/core": "1.3.55",
        "@swc/jest": "0.2.26",
        "@types/jest": "^29.2.2",
        "@types/node": "16",
        "@types/react": "18.2.0",
        "@types/react-dom": " 18.2.1",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "concurrently": "^8.0.1",
        "cross-env": "7.0.3",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^27.1.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-testing-library": "^5.2.0",
        "jest": "^29.3.1",
        "prettier": "^2.6.2",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "rimraf": "5.0.0",
        "ts-jest": "^29.0.3"
    },
    "dependencies": {
        "typescript": "5.0.4"
    },
    "engines": {
        "node": ">=16.x",
        "yarn": ">=1.20.x"
    }
}
