{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-config-prettier", "tslint-plugin-prettier"],
    "exclude": ["node_modules", "coverage", "lib", "scripts/bin"],
    "jsRules": {},
    "rules": {
        "prettier": true,
        "arrow-parens": [true, "ban-single-arg-parens"],
        "interface-name": [true, "never-prefix"],
        "max-classes-per-file": [true, 1, "exclude-class-expressions"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "max-line-length": [true, { "limit": 120, "ignore-pattern": "^import |^export {(.*?)}" }],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
        "typedef": [true, "parameter", "member-variable-declaration"]
    },
    "rulesDirectory": []
}
