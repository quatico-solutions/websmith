{
    "name": "@qs/websmith",
    "version": "0.0.1",
    "description": "A compiler for web blocks to custom elements",
    "author": "Quatico Solutions AG",
    "license": "SEE LICENSE IN LICENSE",
    "publishConfig": {
        "registry": "https://binaries.quatico.com/api/npm/quatico-private-npm/"
    },
    "main": "./bin/index.js",
    "types": "./bin/index.d.ts",
    "bin": {
        "websmith": "./bin/cli/bin.js"
    },
    "files": [
        "LICENSE",
        "README.md",
        "bin"
    ],
    "scripts": {
        "clean": "rimraf dist bin coverage",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix --color",
        "build": "tsc",
        "watch": "tsc --watch",
        "test": "jest --verbose --coverage",
        "test:e2e": "jest --config jest.e2e.config.js --color --verbose",
        "test:update-snapshots": "yarn test -u",
        "test:watch": "jest --watch",
        "dist": "cross-env-shell NODE_ENV=production \"yarn clean && yarn lint && yarn test && yarn build\"",
        "license:check": "license-check-and-add check -f license-config.json",
        "license:add": "license-check-and-add add -f license-config.json",
        "license:remove": "license-check-and-add remove -f license-config.json",
        "prepublishOnly": "yarn dist",
        "publish-npm": "npm publish --access public",
        "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags"
    },
    "devDependencies": {
        "@types/cucumber": "7.0.0",
        "@types/glob": "^7.1.3",
        "@types/jest": "^27.4.1",
        "@types/lodash": "4.14.181",
        "@types/mem": "^4.2.0",
        "@types/node": "16",
        "@types/sass": "1.43.1",
        "@types/scss-parser": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "concurrently": "7.1.0",
        "cross-env": "7.0.3",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^26.1.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-testing-library": "^5.2.0",
        "glob": "7.2.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "jest-cucumber": "3.0.1",
        "license-check-and-add": "4.0.3",
        "lodash": "^4.17.20",
        "memfs": "^3.4.1",
        "prettier": "^2.6.2",
        "rimraf": "3.0.2",
        "ts-dedent": "^2.0.0",
        "ts-jest": "27.1.4"
    },
    "dependencies": {
        "commander": "^9.1.0",
        "create-hash": "1.2.0",
        "mem": "9.0.2",
        "path": "0.12.7",
        "picomatch": "2.3.1",
        "sass": "^1.49.11",
        "scss-parser": "^1.0.5",
        "typescript": "^4.6.3",
        "web-component-analyzer": "^1.1.6"
    },
    "engines": {
        "node": ">=16.x",
        "yarn": ">=1.20.x"
    }
}
