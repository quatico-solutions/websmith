{
    "name": "websmith",
    "version": "0.0.1",
    "description": "This project is a compiler frontend for the tsc.",
    "author": "Quatico Solutions AG",
    "license": "SEE LICENSE IN LICENSE",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://apps.quatico.com/repo/scm/webbloqs/qs-websmith.git"
    },
    "files": [
        "LICENSE",
        "README.md"
    ],
    "workspaces": {
        "packages": [
            "packages/api",
            "packages/compiler",
            "packages/cli",
            "packages/webpack",
            "packages/test",
            "packages/examples"
        ]
    },
    "scripts": {
        "clean": "yarn workspaces run clean",
        "lint": "yarn workspaces run lint",
        "build": "yarn workspaces run build",
        "execute:examples": "yarn --cwd packages/examples execute",
        "watch": "yarn workspaces run watch",
        "test": "yarn workspaces run test",
        "test:e2e": "yarn workspaces run test:e2e",
        "test:update-snapshots": "yarn workspaces run test:update-snapshots",
        "test:watch": "yarn workspaces run test:watch",
        "dist": "yarn clean && yarn lint && yarn test && cross-env-shell NODE_ENV=production \"yarn build\" && yarn test:e2e",
        "license:check": "license-check-and-add check -f license-config.json",
        "license:add": "license-check-and-add add -f license-config.json",
        "license:remove": "license-check-and-add remove -f license-config.json",
        "prepublishOnly": "yarn dist",
        "publish-npm": "npm publish --access public",
        "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags"
    },
    "devDependencies": {
        "@types/cucumber": "7.0.0",
        "@types/glob": "^7.1.3",
        "@types/jest": "^27.4.1",
        "@types/lodash": "4.14.181",
        "@types/mem": "^4.2.0",
        "@types/node": "16",
        "@types/sass": "1.43.1",
        "@types/scss-parser": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "concurrently": "7.1.0",
        "cross-env": "7.0.3",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^26.1.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-testing-library": "^5.2.0",
        "glob": "7.2.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "jest-cucumber": "3.0.1",
        "license-check-and-add": "4.0.3",
        "lodash": "^4.17.20",
        "memfs": "^3.4.1",
        "prettier": "^2.6.2",
        "rimraf": "3.0.2",
        "ts-dedent": "^2.0.0",
        "ts-jest": "27.1.4",
        "ts-node": "10.7.0"
    },
    "dependencies": {
        "commander": "^9.1.0",
        "create-hash": "1.2.0",
        "mem": "9.0.2",
        "path": "0.12.7",
        "picomatch": "2.3.1",
        "sass": "^1.49.11",
        "scss-parser": "^1.0.5",
        "typescript": "4.5.4",
        "web-component-analyzer": "^1.1.6"
    },
    "engines": {
        "node": ">=16.x",
        "yarn": ">=1.20.x"
    }
}
